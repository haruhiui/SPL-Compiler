program test_type; 

const 
    ic = 1; 
    rc = 1.234; 
    bc = false; 
    cc = 'c'; 

var 
    iv : integer; 
    rv : real; 
    bv : boolean; 
    cv : char; 
    sv : string; 
    num : integer; 

// if the function or procedure doesn't have any parameters, just define it like: function func: ..., 
// there's no parentheses after function name 
function inputNum(str: string): integer; 
begin 
    writeln(str); 
    read(inputNum); 
end; 

procedure printAll; 
begin 
    write("    iv: ", iv); 
    write("    rv: ", rv); 
    write("    bv: ", bv); 
    write("    cv: ", cv); 
    write("    sv: ", sv);
    writeln(""); 
end; 

begin 
    iv := 5; 
    rv := 3.124; 
    bv := false; 
    cv := 'a'; 
    sv := "asdf"; 

    // writeln(); // this is not allowed because we can not use printf(); 
    writeln("ic: ", ic); 
    writeln("rc: ", rc); 
    writeln("bc: ", bc); 
    writeln("cc: ", cc); 
    writeln(""); 

    printAll; 

    read(iv); 
    read(rv); 
    read(bv); 
    read(cv); 

    printAll; 

end 
